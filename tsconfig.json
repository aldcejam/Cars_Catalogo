{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@application/*": [
        "application/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "infrastructure/shared/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@infra/*": [
        "infrastructure/*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}